<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background"
        android:gravity="center_vertical"
        android:paddingVertical="5dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/back_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:contentDescription="Back"
            android:minWidth="48dp"
            android:minHeight="48dp"
            android:background="@drawable/icon_back"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/logo"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/logo"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_marginRight="60dp"
            android:background="@color/transparent"
            app:layout_constraintHorizontal_weight="9"
            app:layout_constraintLeft_toRightOf="@id/back_button"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/aq_logo" />

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="15dp"
            android:background="@color/grey_boarder"
            app:layout_constraintTop_toBottomOf="@id/logo"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/createFarm1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/header">
        <TextView
            android:id="@+id/createFieldTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:paddingBottom="16dp"
            android:text="  Field Registration"
            android:textSize="30sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_weight="1"/>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/farmNote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            app:layout_constraintTop_toBottomOf="@id/createFieldTitle">
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/option_oldfarm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/create_button"
                android:textColor="@color/background"
                android:textSize="20dp"
                android:text="Exist farm"
                android:minHeight="48dp"
                android:padding="10dp"
                android:gravity="center"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/option_newfarm"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/option_newfarm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/action_button"
                android:textColor="@color/button"
                android:textSize="20dp"
                android:text="New farm"
                android:minHeight="48dp"
                android:padding="10dp"
                android:gravity="center"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toRightOf="@id/option_oldfarm"
                app:layout_constraintRight_toRightOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/farmInputLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="10dp"
            android:paddingVertical="10dp"
            app:layout_constraintTop_toBottomOf="@+id/farmNote"
            app:layout_constraintVertical_weight="1">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/farmPart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="10dp"
                android:paddingVertical="10dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@id/fieldPart"
                app:layout_constraintVertical_weight="1">

                <TextView
                    android:id="@+id/farmName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:background="@android:color/transparent"
                    android:paddingHorizontal="10dp"
                    android:text="Farm Name"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="19sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/farmNameContainer"
                    app:layout_constraintHorizontal_weight="1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <LinearLayout
                    android:id="@+id/farmNameContainer"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintHorizontal_weight="2"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/farmName"
                    app:layout_constraintTop_toTopOf="parent"
                    android:orientation="horizontal">
                    <EditText
                        android:id="@+id/farmNameText"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/edit_style"
                        android:ems="10"
                        android:hint=" Create Farm ..."
                        android:inputType="text"
                        android:paddingTop="16dp"
                        android:paddingBottom="16dp"
                        android:layout_marginBottom="10dp"
                        android:paddingStart="5dp"
                        android:textSize="16sp"
                        android:visibility="gone"/>

                    <Spinner
                        android:id="@+id/farmNameSpinner"
                        android:background="@drawable/selector_trans"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="10dp"
                        android:layout_marginEnd="2dp"
                        android:paddingTop="16dp"
                        android:paddingBottom="16dp"
                        android:textSize="20dp"
                        android:overlapAnchor="false"
                        />
                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/fieldPart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="10dp"
                android:paddingVertical="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_weight="1">

                <TextView
                    android:id="@+id/fieldNameText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:paddingHorizontal="10dp"
                    android:text="Field Name"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="19sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/fieldNameInput"
                    app:layout_constraintHorizontal_weight="1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <EditText
                    android:id="@+id/fieldNameInput"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:autofillHints=""
                    android:background="@drawable/edit_style"
                    android:ems="10"
                    android:hint=" Create Field ..."
                    android:inputType="text"
                    android:layout_marginEnd="2dp"
                    android:paddingTop="16dp"
                    android:paddingBottom="16dp"
                    android:paddingStart="5dp"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_weight="2"
                    app:layout_constraintStart_toEndOf="@+id/fieldNameText"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>


            <TextView
                android:id="@+id/invalidFarm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="16dp"
                android:text="* Minimum 3 characters, and must start with letters"
                android:textColor="@color/red"
                android:visibility="gone"
                app:layout_constraintBottom_toTopOf="@id/fieldPart"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/farmPart" />
            <TextView
                android:id="@+id/errorText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="16dp"
                android:text="* Minimum 3 characters, and must start with letters"
                android:textColor="@color/red"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/fieldPart" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/prompt_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="15dp"
            android:textSize="18dp"
            android:textColor="@color/background_dark"
            android:padding="12dp"
            android:text="Select &quot;New Farm&quot; to create a new farm"
            app:layout_constraintTop_toBottomOf="@id/farmInputLayout"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/nextButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:layout_marginVertical="15dp"
            android:background="@drawable/create_button"
            android:paddingVertical="10dp"
            android:text="Next"
            android:textSize="25dp"
            android:gravity="center"
            android:textColor="@color/background"
            app:layout_constraintTop_toBottomOf="@id/prompt_text" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/createFarm2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintBottom_toBottomOf="parent"
        android:visibility="gone">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/farmInputLayout2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginHorizontal="10dp"
            android:paddingVertical="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/notice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/notice_background"
                android:layout_marginHorizontal="5dp"
                android:paddingVertical="10dp"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/note1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:text="• Please draw a polygon shape on the map using the icon to outline your field."
                    android:textColor="#1d2c56"
                    android:textSize="15dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/note2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="• The field must be within 1000 metres from the gateway"
                    android:textColor="#1d2c56"
                    android:textSize="15dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/note1" />
            </androidx.constraintlayout.widget.ConstraintLayout>
            <com.google.android.gms.maps.MapView
                android:id="@+id/map_view"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginHorizontal="5dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:contentDescription="Google Map"
                app:layout_constraintBottom_toTopOf="@id/submitButton"
                app:layout_constraintTop_toBottomOf="@id/notice"
                tools:layout_editor_absoluteX="15dp" />

            <androidx.cardview.widget.CardView
                android:id="@+id/tools"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/border"
                app:cardCornerRadius="10dp"
                app:layout_constraintRight_toRightOf="@id/map_view"
                app:layout_constraintTop_toTopOf="@id/map_view">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="5dp">

                    <ImageButton
                        android:id="@+id/move_button"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginVertical="10dp"
                        android:background="@color/grey_boarder"
                        android:scaleType="fitCenter"
                        android:src="@drawable/icon_hand_drag"
                        app:layout_constraintDimensionRatio="1:1"
                        app:layout_constraintTop_toTopOf="parent"
                        android:contentDescription="Clear Drawing"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginHorizontal="3dp"
                        android:background="@color/grey_boarder"
                        app:layout_constraintBottom_toTopOf="@id/drawing_button"
                        app:layout_constraintTop_toBottomOf="@id/move_button" />

                    <ImageButton
                        android:id="@+id/drawing_button"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginVertical="10dp"
                        android:background="@color/background"
                        android:scaleType="fitCenter"
                        android:src="@drawable/icon_place_marker"
                        app:layout_constraintBottom_toTopOf="@id/clear_button"
                        app:layout_constraintDimensionRatio="1:1"
                        app:layout_constraintTop_toBottomOf="@id/move_button"
                        android:contentDescription="Clear Drawing"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginHorizontal="3dp"
                        android:background="@color/grey_boarder"
                        app:layout_constraintBottom_toTopOf="@id/clear_button"
                        app:layout_constraintTop_toBottomOf="@id/drawing_button" />

                    <ImageButton
                        android:id="@+id/clear_button"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginVertical="10dp"
                        android:background="@color/background"
                        android:scaleType="fitCenter"
                        android:src="@drawable/icon_clear"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintDimensionRatio="1:1"
                        app:layout_constraintTop_toBottomOf="@id/drawing_button"
                        android:contentDescription="Clear Drawing"/>
                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/submitButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/create_button"
                android:paddingVertical="10dp"
                android:text="Submit"
                android:textSize="25dp"
                android:textColor="@color/background"
                android:gravity="center"
                app:layout_constraintBottom_toBottomOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.constraintlayout.widget.ConstraintLayout>