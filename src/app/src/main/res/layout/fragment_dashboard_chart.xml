<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.Dashboard.Chart.Chart"
    android:background="@color/background">

    <!-- menu part -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/menu"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toTopOf="parent">

        <Spinner
            android:id="@+id/spinner_farm"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:paddingRight="40dp"
            android:layout_marginHorizontal="5dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/selector_fill"
            android:overlapAnchor="false"
            android:dropDownWidth="match_parent"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/spinner_field"
            app:layout_constraintTop_toTopOf="parent"
            tools:listitem="@layout/list_option_white"
            />

        <Spinner
            android:id="@+id/spinner_field"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:paddingRight="40dp"
            android:layout_marginHorizontal="5dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/selector_fill"
            android:overlapAnchor="false"
            android:dropDownWidth="match_parent"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintLeft_toRightOf="@id/spinner_farm"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"

            tools:listitem="@layout/list_option_white"/>

        <Spinner
            android:id="@+id/spinner_sensor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/selector_fill"
            android:minHeight="48dp"
            android:overlapAnchor="false"
            android:paddingRight="40dp"
            app:layout_constraintTop_toBottomOf="@id/spinner_field"
            tools:layout_editor_absoluteX="5dp"
            tools:listitem="@layout/list_option_white" />

    </androidx.constraintlayout.widget.ConstraintLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@id/menu"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- Line Chart Title & Background -->
            <TextView
                android:id="@+id/lineChartTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Evaporation"
                android:background="@color/title_background_color"
                android:padding="8dp"
                android:textStyle="bold"
                android:textSize="24sp"
                app:layout_constraintTop_toBottomOf="@id/batteryChart" />

            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/lineChart"
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:background="@color/chart_background_color"
                app:layout_constraintTop_toBottomOf="@id/lineChartTitle"/>
            <!-- loading data -->
            <LinearLayout
                android:id="@+id/loading_evaporation"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="@color/background"
                app:layout_constraintTop_toBottomOf="@id/lineChartTitle"
                app:layout_constraintBottom_toBottomOf="@id/lineChart">

                <TextView
                    android:id="@+id/loading_evaporation_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:paddingVertical="10dp"
                    android:text="Loading ......"
                    android:textColor="@color/black"
                    android:textSize="30dp"
                    android:textStyle="bold" />
            </LinearLayout>
            <!-- Battery Chart Title & Background -->
            <TextView
                android:id="@+id/batteryChartTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Battery level"
                android:background="@color/title_background_color"
                android:padding="8dp"
                android:layout_marginTop="8dp"
                android:textStyle="bold"
                android:textSize="24sp"
                app:layout_constraintTop_toBottomOf="@id/precipChart" />

            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/batteryChart"
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:background="@color/chart_background_color"
                app:layout_constraintTop_toBottomOf="@id/batteryChartTitle"/>

            <!-- loading data -->
            <LinearLayout
                android:id="@+id/loading_battery"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="@color/background"
                app:layout_constraintTop_toBottomOf="@id/batteryChartTitle"
                app:layout_constraintBottom_toBottomOf="@id/batteryChart">

                <TextView
                    android:id="@+id/loading_battery_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:paddingVertical="10dp"
                    android:text="Loading ......"
                    android:textColor="@color/black"
                    android:textSize="30dp"
                    android:textStyle="bold" />
            </LinearLayout>


            <!-- Mos Chart Title & Background -->
            <TextView
                android:id="@+id/mosChartTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Average Soil Moisture/Temperature"
                android:background="@color/title_background_color"
                android:padding="8dp"
                android:layout_marginTop="8dp"
                android:textStyle="bold"
                android:textSize="24sp"
                app:layout_constraintTop_toTopOf="parent" />

            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/MosChart"
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:background="@color/chart_background_color"
                app:layout_constraintTop_toBottomOf="@id/mosChartTitle"/>

            <!-- loading data -->
            <LinearLayout
                android:id="@+id/loading_moisture"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="@color/background"
                app:layout_constraintTop_toBottomOf="@id/mosChartTitle"
                app:layout_constraintBottom_toBottomOf="@id/MosChart">

                <TextView
                    android:id="@+id/loading_moisture_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:paddingVertical="10dp"
                    android:text="Loading ......"
                    android:textColor="@color/black"
                    android:textSize="30dp"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- Precip Chart Title & Background -->
            <TextView
                android:id="@+id/precipChartTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="precipitation chart over 7 days "
                android:background="@color/title_background_color"
                android:padding="8dp"
                android:layout_marginTop="8dp"
                android:textStyle="bold"
                android:textSize="24sp"
                app:layout_constraintTop_toBottomOf="@id/MosChart" />

            <com.github.mikephil.charting.charts.BarChart
                android:id="@+id/precipChart"
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:paddingLeft="0dp"
                android:background="@color/chart_background_color"
                app:layout_constraintTop_toBottomOf="@id/precipChartTitle"/>

            <!-- loading data -->
            <LinearLayout
                android:id="@+id/loading_precipitation"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="@color/background"
                app:layout_constraintTop_toBottomOf="@id/precipChartTitle"
                app:layout_constraintBottom_toBottomOf="@id/precipChart">

                <TextView
                    android:id="@+id/loading_precipitation_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:paddingVertical="10dp"
                    android:text="Loading ......"
                    android:textColor="@color/black"
                    android:textSize="30dp"
                    android:textStyle="bold" />
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>