                android:autoSizeMinTextSize="10dp"
                android:autoSizeTextType="uniform"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/card4_tempView2"
                app:layout_constraintStart_toEndOf="@id/weather_icon4"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintHorizontal_weight="1"/>

            <TextView
                android:id="@+id/card4_tempView2"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:text=" Humidity: 57%\n Wind: 8 km/h"
                android:gravity="center"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/card4_tempView3"
                app:layout_constraintStart_toEndOf="@id/card4_tempView1"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintHorizontal_weight="2"/>

            <TextView
                android:id="@+id/card4_tempView3"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:gravity="center"
                android:text="Weather\nTuesday\nperiodic clouds"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/card4_tempView2"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintHorizontal_weight="2"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>
    <View
        android:id="@+id/divider45"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginHorizontal="15dp"
        android:background="@color/grey_boarder"
        app:layout_constraintTop_toBottomOf="@id/card4"
        app:layout_constraintBottom_toTopOf="@id/card5"/>
    <LinearLayout
        android:id="@+id/card5"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:background="@color/background"
        android:paddingHorizontal="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/divider45"
        app:layout_constraintVertical_weight="1">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/weather_icon5"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/card5_tempView1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/weather_icon"
                app:layout_constraintHorizontal_weight="1"/>

            <TextView
                android:id="@+id/card5_tempView1"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:text="24°C"
                android:gravity="center"
                android:autoSizeMaxTextSize="20sp"
                android:autoSizeMinTextSize="10dp"
                android:autoSizeTextType="uniform"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/card5_tempView2"
                app:layout_constraintStart_toEndOf="@id/weather_icon5"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintHorizontal_weight="1"/>

            <TextView
                android:id="@+id/card5_tempView2"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:text=" Humidity: 57%\n Wind: 8 km/h"
                android:gravity="center"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/card5_tempView3"
                app:layout_constraintStart_toEndOf="@id/card5_tempView1"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintHorizontal_weight="2"/>

            <TextView
                android:id="@+id/card5_tempView3"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:gravity="center"
                android:text="Weather\nTuesday\nperiodic clouds"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/card5_tempView2"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintHorizontal_weight="2"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>
    <!-- page title + create button-->



