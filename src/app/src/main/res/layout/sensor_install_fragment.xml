<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background"
        android:gravity="center_vertical"
        android:paddingVertical="5dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/back_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:contentDescription="Back"
            android:minWidth="48dp"
            android:minHeight="48dp"
            android:background="@drawable/icon_back"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/logo"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/logo"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_marginRight="60dp"
            android:background="@color/transparent"
            app:layout_constraintHorizontal_weight="9"
            app:layout_constraintLeft_toRightOf="@id/back_button"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/aq_logo" />

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="15dp"
            android:background="@color/grey_boarder"
            app:layout_constraintTop_toBottomOf="@id/logo"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!--Display gateway search result (step1)-->
    <ScrollView
        android:id="@+id/search_gateways"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/background"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/header">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:paddingVertical="15dp">

            <TextView
                android:id="@+id/gateway_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:ellipsize="middle"
                android:gravity="center"
                android:layout_marginVertical="10dp"
                android:paddingHorizontal="15dp"
                android:singleLine="true"
                android:text="No gateway found within this field range"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="parent"
                 />


            <TextView
                android:id="@+id/gatewayList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@drawable/border"
                android:gravity="center_horizontal"
                android:lineSpacingExtra="5dp"
                android:textSize="25dp"
                android:text="gateway1\ngateway2"
                android:padding="10dp"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@id/gateway_text" />


            <!--Display gateway/sensor pairing prompt -->
            <TextView
                android:id="@+id/text1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="start"
                android:paddingHorizontal="15dp"
                android:paddingVertical="10dp"
                android:text="• Press and hold the physical sensor button until it flashes, one sensor at a time."
                android:textColor="@color/black"
                android:textSize="25dp"
                app:layout_constraintTop_toBottomOf="@id/gatewayList" />

            <TextView
                android:id="@+id/text2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="start"
                android:paddingHorizontal="15dp"
                android:paddingVertical="10dp"
                android:text="• Wait about 60 seconds and the sensor will flash twice after the sensor has successfully paired with the gateway."
                android:textColor="@color/black"
                android:textSize="25dp"
                app:layout_constraintTop_toBottomOf="@id/text1" />

            <TextView
                android:id="@+id/text3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="start"
                android:paddingHorizontal="15dp"
                android:paddingVertical="10dp"
                android:text="• If pairing is unsuccessful, the sensor will flash rapidly, in that case, retry step 1 or contact AquaTerra support"
                android:textColor="@color/black"
                android:textSize="25dp"
                app:layout_constraintTop_toBottomOf="@id/text2" />

            <ImageView
                android:id="@+id/prompt_image"
                android:layout_width="match_parent"
                android:layout_height="450dp"
                android:layout_marginHorizontal="5dp"
                android:layout_marginVertical="10dp"
                android:layout_marginTop="12dp"
                android:src="@drawable/sensorbutton"
                app:layout_constraintTop_toBottomOf="@id/text3"
                tools:layout_editor_absoluteX="4dp" />

            <TextView
                android:id="@+id/prompt_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:padding="10dp"
                android:text="*Please make sure the sensor has successfully paired with the gateway before proceed to next step."
                android:textColor="@color/red"
                android:textSize="24dp"
                app:layout_constraintTop_toBottomOf="@id/prompt_image" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/step1_next"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:layout_marginVertical="15dp"
                android:background="@drawable/invalid_button"
                android:clickable="false"
                android:maxLines="1"
                android:paddingVertical="10dp"
                android:text="Activating..."
                android:textColor="@color/background"
                android:textSize="30dp"
                android:gravity="center"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/prompt_text" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <!--Display paired sensor (step2)-->
    <ScrollView
        android:id="@+id/set_sensor"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/background"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/header">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent">

            <!--Display gateway/sensor pairing prompt -->
            <TextView
                android:id="@+id/gateway_select_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:paddingHorizontal="15dp"
                android:paddingVertical="10dp"
                android:layout_marginTop="15dp"
                android:text="Please select the new sensor ID you want to implement."
                android:textColor="@color/black"
                android:textSize="25dp"
                app:layout_constraintTop_toTopOf="parent"/>
            <TextView
                android:id="@+id/step2_sensor_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="25dp"
                android:background="@color/background"
                android:ellipsize="middle"
                android:gravity="center"
                android:paddingHorizontal="15dp"
                android:paddingVertical="10dp"
                android:singleLine="true"
                android:text="Found 1 sensor(s) registered"
                android:textColor="@color/edit"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/gateway_select_text" />
            <RadioGroup
                android:id="@+id/step2_sensor_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/border"
                android:padding="10dp"
                app:layout_constraintTop_toBottomOf="@id/step2_sensor_text"
                tools:layout_height="300dp"
                />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/step2_next"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:layout_marginVertical="20dp"
                android:background="@drawable/invalid_button"
                android:clickable="false"
                android:paddingVertical="10dp"
                android:text="Next"
                android:textColor="@color/background"
                android:textSize="30dp"
                android:gravity="center"
                app:layout_constraintTop_toBottomOf="@id/step2_sensor_list" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <!--display map to select location (step3)-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/set_sensor_location"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/header">

        <TextView
            android:id="@+id/location_prompt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Place a marker to locate your sensor on map or enter the coordinates."
            android:textSize="20dp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent" />


        <com.google.android.gms.maps.MapView
            android:id="@+id/map_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginHorizontal="15dp"
            android:layout_marginBottom="10dp"
            android:contentDescription="Google Map"
            app:layout_constraintBottom_toTopOf="@id/step3_submit"
            app:layout_constraintTop_toBottomOf="@id/location_prompt" />

        <androidx.cardview.widget.CardView
            android:id="@+id/tools"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/border"
            app:cardCornerRadius="10dp"
            app:layout_constraintRight_toRightOf="@id/map_view"
            app:layout_constraintTop_toTopOf="@id/map_view">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="5dp">

                <ImageButton
                    android:id="@+id/move_button"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginVertical="10dp"
                    android:background="@color/grey_boarder"
                    android:scaleType="fitCenter"
                    android:src="@drawable/icon_hand_drag"
                    app:layout_constraintDimensionRatio="1:1"
                    app:layout_constraintTop_toTopOf="parent" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginHorizontal="3dp"
                    android:background="@color/grey_boarder"
                    app:layout_constraintBottom_toTopOf="@id/drawing_button"
                    app:layout_constraintTop_toBottomOf="@id/move_button" />

                <ImageButton
                    android:id="@+id/drawing_button"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginVertical="10dp"
                    android:background="@color/background"
                    android:scaleType="fitCenter"
                    android:src="@drawable/icon_place_marker"
                    app:layout_constraintBottom_toTopOf="@id/clear_button"
                    app:layout_constraintDimensionRatio="1:1"
                    app:layout_constraintTop_toBottomOf="@id/move_button" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginHorizontal="3dp"
                    android:background="@color/grey_boarder"
                    app:layout_constraintBottom_toTopOf="@id/clear_button"
                    app:layout_constraintTop_toBottomOf="@id/drawing_button" />

                <ImageButton
                    android:id="@+id/clear_button"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginVertical="10dp"
                    android:background="@color/background"
                    android:scaleType="fitCenter"
                    android:src="@drawable/icon_clear"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintDimensionRatio="1:1"
                    app:layout_constraintTop_toBottomOf="@id/drawing_button" />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/step3_submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/invalid_button"
            android:clickable="false"
            android:paddingVertical="10dp"
            android:text="Submit"
            android:textColor="@color/background"
            android:textSize="30dp"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- loading data -->
    <LinearLayout
        android:id="@+id/loading_data"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/background"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/header">

        <TextView
            android:id="@+id/loading_msg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:paddingVertical="10dp"
            android:text="Loading ......"
            android:textColor="@color/black"
            android:textSize="30dp"
            android:textStyle="bold" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>